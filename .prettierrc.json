{
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 80,
  "singleQuote": true,
  "endOfLine": "lf",
  "trailingComma": "es5",
  "arrowParens": "always",
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": [
        "algorithms/*/{java,type}script/**/*",
        "lib/javascript/**/*.{js,ts}",
        "script/**/*"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
